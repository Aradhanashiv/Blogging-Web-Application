<div class="hero-container">
  <img src="/img/hero.jpg" class="hero-image" alt="Hero Image">
  <div class="hero-text">
    <h1>Welcome to Blogify</h1>
    <p>Pack light. Read heavy.</p>
  </div>
</div> 

<div class="container text-center">
  <h2 class="mb-4 ">Find Out Here</h2>
  <div class="row align-items-center">
     <% data.forEach(item => {  %>
    <div class="col">
<div class="card" style="width:18rem;">
  <img src="<%= item.coverImageurl %>" class="card-img-top" alt="..." width="20%" >
  <div class="card-body">
    <h5 class="card-title"><%= item.title %></h5>
    <!-- <p class="card-text"><%= item.body %></p> -->
    <a href="/post/<%= item._id %>" class="btn btn-primary">View Blog</a>
  </div>
</div>
</div>
 <% }); %>
 </div>
</div>

